{
  "extends": [
    "oclif",
    "oclif-typescript"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ]
  },
  "overrides": [
    {
      "files": [
        "src/**/*.ts"
      ],
      "rules": {
        "no-console": "off",
        "no-useless-constructor": "off"
      }
    }
  ]
}
