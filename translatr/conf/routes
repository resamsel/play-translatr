# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET		/								controllers.Application.index

# Dashboards
GET		/dashboard						controllers.Dashboards.dashboard
GET		/dashboard/search				controllers.Dashboards.search

# Projects
GET		/project/:id					controllers.Projects.project(id: java.util.UUID)
POST	/project						controllers.Projects.create
GET		/project/:projectName/create	controllers.Projects.createImmediately(projectName: String)
GET		/project/:id/search				controllers.Projects.search(id: java.util.UUID)
GET		/project/:id/edit				controllers.Projects.edit(id: java.util.UUID)
POST	/project/:id/edit				controllers.Projects.edit(id: java.util.UUID)
GET		/project/:id/remove				controllers.Projects.remove(id: java.util.UUID)
GET		/project/:id/locales			controllers.Projects.locales(id: java.util.UUID)
GET		/project/:id/keys				controllers.Projects.keys(id: java.util.UUID)
GET		/project/:id/keys/search		controllers.Projects.keysSearch(id: java.util.UUID)

# Locales
GET		/locale/:id						controllers.Application.locale(id: java.util.UUID)
GET		/locale/:id/keys/search			controllers.Application.localeKeysSearch(id: java.util.UUID)
GET		/locale/:id/edit				controllers.Application.localeEdit(id: java.util.UUID)
POST	/locale/:id/edit				controllers.Application.localeEdit(id: java.util.UUID)
GET		/locale/:id/remove				controllers.Application.localeRemove(id: java.util.UUID)
GET		/locale/:id/import				controllers.Application.localeImport(id: java.util.UUID)
POST	/locale/:id/import				controllers.Application.localeImport(id: java.util.UUID)
GET		/locale/:id/export/:type		controllers.Application.localeExport(id: java.util.UUID, type: String)
GET		/locale/:projectId/:localeName/create	controllers.Application.localeCreateImmediately(projectId: java.util.UUID, localeName: String)
POST	/locale/:projectId				controllers.Application.localeCreate(projectId: java.util.UUID)
GET		/locale/:id/translate			controllers.Application.localeTranslate(id: java.util.UUID)

# Keys
GET		/key/:id						controllers.Application.key(id: java.util.UUID)
GET		/key/:id/edit					controllers.Application.keyEdit(id: java.util.UUID)
POST	/key/:id/edit					controllers.Application.keyEdit(id: java.util.UUID)
GET		/key/:keyId/remove				controllers.Application.keyRemove(keyId: java.util.UUID, localeId: java.util.UUID = null)
GET		/key/:keyId/:localeId/remove	controllers.Application.keyRemove(keyId: java.util.UUID, localeId: java.util.UUID)
GET		/key/:projectId/:keyName/create	controllers.Application.keyCreateImmediately(projectId: java.util.UUID, keyName: String)
GET		/key/:projectId/create			controllers.Application.keyCreate(projectId: java.util.UUID, localeId: java.util.UUID = null)
POST	/key/:projectId/create			controllers.Application.keyCreate(projectId: java.util.UUID, localeId: java.util.UUID = null)
POST	/key/:projectId/:localeId/create	controllers.Application.keyCreate(projectId: java.util.UUID, localeId: java.util.UUID)

# Messages
#GET	/message/:id					controllers.Application.message(id: java.util.UUID)

# Load demo data
GET		/load							controllers.Application.load

GET		/command/:key/execute	controllers.Application.commandExecute(key: String)

#
# API
#
#GET	/api/project/:projectId			controllers.Api.getProject(projectId: String)
PUT		/api/project					controllers.Api.putProject

GET		/api/locales/:projectId			controllers.Api.findLocales(projectId: java.util.UUID)
#GET		/api/locale/:localeId		controllers.Api.getLocale(localeId: java.util.UUID)
PUT		/api/locale						controllers.Api.putLocale

GET		/api/messages/:projectId		controllers.Api.findMessages(projectId: java.util.UUID)
GET		/api/message/:localeId/:key		controllers.Api.getMessage(localeId: java.util.UUID, key: String)
PUT		/api/message					controllers.Api.putMessage

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file					controllers.Assets.versioned(path="/public", file: Asset)

GET		/javascriptRoutes				controllers.Application.javascriptRoutes
