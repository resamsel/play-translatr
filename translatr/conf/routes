# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           	controllers.ApplicationController.index
GET     /dashboard	             		controllers.ApplicationController.dashboard

# Projects
GET     /project/:id             		controllers.ApplicationController.project(id: java.util.UUID)
POST	/project						controllers.ApplicationController.projectCreate

# Locales
GET     /locale/:id			       		controllers.ApplicationController.locale(id: java.util.UUID)
GET		/locale/:id/import				controllers.ApplicationController.localeImport(id: java.util.UUID)
POST	/locale/:id/import				controllers.ApplicationController.localeImport(id: java.util.UUID)
GET     /locale/:id/export	       		controllers.ApplicationController.localeExport(id: java.util.UUID)
POST	/locale/:projectId				controllers.ApplicationController.localeCreate(projectId: java.util.UUID)
GET     /locale/:id/remove	       		controllers.ApplicationController.localeRemove(id: java.util.UUID)

# Keys
GET		/key/:keyId/:localeId/remove	controllers.ApplicationController.keyRemove(keyId: java.util.UUID, localeId: java.util.UUID)
POST	/key/:localeId					controllers.ApplicationController.keyCreate(localeId: java.util.UUID)

#GET     /message/:id             		controllers.ApplicationController.message(id: java.util.UUID)

GET		/load							controllers.ApplicationController.load

#GET		/api/project/:projectId		controllers.ApiController.getProject(projectId: String)
PUT		/api/project					controllers.ApiController.putProject

#GET		/api/locale/:localeId		controllers.ApiController.getLocale(localeId: java.util.UUID)
PUT		/api/locale						controllers.ApiController.putLocale

GET		/api/message/:localeId/:key		controllers.ApiController.getMessage(localeId: java.util.UUID, key: String)
PUT		/api/message					controllers.ApiController.putMessage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /javascriptRoutes      			controllers.ApplicationController.javascriptRoutes
